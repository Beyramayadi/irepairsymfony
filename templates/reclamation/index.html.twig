                    {% if tabclass is empty %}
<h4>Pas de classe</h4>
{% else %}
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Id_reclam</th>
                          <th>Reclamation</th>
                          <th>Date_reclamation</th>
                          <th>id_client</th>
                          <th>Modification</th>
                        <th>Suppression</th>
                        </tr>
                     
                    </table>
                     {% for reclamation in tabclass %}
                        <tr>
                            <td>{{ reclamation.Id_reclam }}</td>
                            <td>{{ reclamation.Reclamation }}</td>
                            <td>{{ reclamation.Date_reclamation }}</td>
                            <td>{{ reclamation.id_client }}</td>
                            
                            <td>
                                <a class="btn btn-danger" href="{{ path('suppReclamation',{'id':reclamation.id}) }}">Supprimer</a>
                            </td>
                        </tr>

                    {% endfor %}
                  </div>
